@model IEnumerable<CRM.Models.MstClass>

@{
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<div class="main">
    <div class="register-container">
        <h2>Class Master</h2>

        <!-- Create Form -->
        <div>
            <label>Class Name11</label>
            <input type="text" id="className" class="wide-input" />
            <button onclick="saveClass()">Submit</button>
        </div>

        <br />

        <!-- Data Table -->
        <table class="grid-table">
            <thead>
                <tr>
                    <th>Sr No</th>
                    <th>Class Name</th>
                    <th>Create By</th>
                    <th>Create Date</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody id="classTable">
                @{
                    int i = 1;
                }
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@i</td>
                        <td>@item.Name</td>
                        <td>@item.CreateBy</td>
                        <td>@item.CreateDatetime</td>
                        <td>
                            <button onclick="editClass(@item.Id)">Edit</button>
                        </td>
                        <td>
                            <button onclick="deleteClass(@item.Id)">Delete</button>
                        </td>
                    </tr>
                    i++;
                }
            </tbody>
        </table>
    </div>
</div>

<!-- EDIT POPUP -->
<div id="editModal" style="display:none; position:fixed; left:30%; top:20%; padding:20px; background:white; border:1px solid #ccc;">
    <h3>Edit Class</h3>
    <input type="hidden" id="editId" />
    <label>Name:</label>
    <input type="text" id="editName" />
    <button onclick="updateClass()">Update</button>
    <button onclick="closeModal()">Close</button>
</div>

@section Scripts {
    <script type="text/javascript">
        // INSERT
        function saveClass() {
            var name = $("#className").val();

            if (name.trim() === "") {
                alert("Class name required");
                return;
            }

            $.post("https://localhost:44382/Master/Create", { className: name }, function (res) {
                if (res.success) location.reload();
                else alert(res.message);
            });
        }

        // OPEN EDIT POPUP
        function editClass(id) {
            $.get("https://localhost:44382/Master/Get?id=" + id, function (data) {
                $("#editId").val(data.id);
                $("#editName").val(data.name);
                $("#editModal").show();
            });
        }

        // UPDATE
        function updateClass() {
            $.post("https://localhost:44382/Master/Update",
                {
                    id: $("#editId").val(),
                    className: $("#editName").val()
                },
                function (res) {
                    if (res.success) location.reload();
                    else alert(res.message);
                });
        }

        function closeModal() {
            $("#editModal").hide();
        }

        // DELETE
        function deleteClass(id) {
            if (confirm("Are you sure?")) {
                $.post("https://localhost:44382/Master/Delete", { id: id }, function () {
                    location.reload();
                });
            }
        }
    </script>
}
