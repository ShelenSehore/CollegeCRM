@model CRM.ModelsForView.StudentViewModel

@{
    Layout = "~/Views/Shared/_MasterLayout.cshtml";

    var baseUrl = ViewBag.BaseUrl;
}


<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-left">
                        <li class="breadcrumb-item"><a href="../Student/List">List</a></li>
                        <li class="breadcrumb-item active">Add Student</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- left column -->
                <div class="col-md-12">
                    <!-- general form elements -->


                    <div class="card card-primary">

                        <div class="card card-primary">
                            <div class="card-header">
                                <h3 class="card-title"><i class="fas fa-search"></i> Search Student</h3>
                            </div>
                            <div class="card-body">


                                <div class="row">
                                    <div class="col-md-2">
                                        <div class="form-group">
                                            <label>Session</label>
                                            <select id="ddlSearchSession" name="ddlSearchSession" asp-items="Model.SessionList" class="form-control">
                                                <option>Select</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-2">
                                        <div class="form-group">
                                            <label>Class</label>
                                            <select id="ddlSearchClass" name="ddlSearchClass" asp-items="Model.ClassList" class="form-control">
                                                <option>Select</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-2">
                                        <div class="form-group">
                                            <label>Course</label>
                                            <select id="ddlSearchCourse" name="ddlSearchCourse" asp-items="Model.SubjectList" class="form-control">
                                                <option>Select</option>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="col-md-2">
                                        <div class="form-group">
                                            <label>Year</label>
                                            <select id="ddlSearchYear" name="ddlSearchYear" asp-items="Model.YearList" class="form-control">
                                                <option>Select</option>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="col-md-2">
                                        <div class="form-group">
                                            <label>Name</label>
                                            <input id="txtSearchStudent" name="txtSearchStudent" class="form-control" placeholder="Student Name">
                                            
                                        </div>
                                    </div>




                                    <div class=" float-lg-right">
                                        <button id="btnSearch" onclick="SearchStudent()" class="btn btn-primary" data-toggle="modal" data-target="#modal-default"><i class="fas fa-search"></i> Search</button>
                                    </div>
                                </div>

                            </div>
                        </div>

                        <!-- /.card-header -->
                        <!-- form start -->
                        <form asp-action="Create" method="post">

                            <!-- COLLEGE DETAILS -->
                            <div class="card card-primary">
                                <div class="card-header">
                                    <h3 class="card-title"><i class="fas fa-university"></i> College Detail</h3>
                                </div>

                                <div class="card-body">
                                    <div class="row">


                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label>Session</label>
                                                <select asp-for="Session" asp-items="Model.SessionList" class="form-control">
                                                    <option>Select</option>
                                                </select>
                                            </div>
                                        </div>

                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label>NewOld</label>
                                                <select asp-for="NewOld" class="form-control">
                                                    <option>Select</option>
                                                    <option>New</option>
                                                    <option>Old</option>
                                                </select>
                                            </div>
                                        </div>

                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label>RegEx</label>
                                                <select asp-for="RegEx" class="form-control">
                                                    <option>Select</option>
                                                    <option>Yes</option>
                                                    <option>No</option>
                                                </select>
                                            </div>
                                        </div>

                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label>Medium</label>
                                                <select asp-for="Medium" class="form-control">
                                                    <option>Select</option>
                                                    <option>Hindi</option>
                                                    <option>English</option>
                                                </select>
                                            </div>
                                        </div>


                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label>Admission Form No</label>
                                                <input asp-for="AdmissionFormNo" class="form-control" placeholder="Form No">
                                            </div>
                                        </div>

                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label>EnRollNo</label>
                                                <input asp-for="EnRollNo" class="form-control" placeholder="Roll No">
                                            </div>
                                        </div>

                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label>AdmissionDate</label>
                                                <input asp-for="AdmissionDate" type="date" class="form-control">
                                            </div>
                                        </div>

                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label>Class</label>
                                                <select id="ddlClass" asp-for="Class" asp-items="Model.ClassList" class="form-control">
                                                    <option>Select</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label>Course</label>
                                                <select id="ddlSubject" asp-for="Course" asp-items="Model.SubjectList" class="form-control">
                                                    <option>Select</option>
                                                </select>
                                            </div>
                                        </div>

                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label>Year</label>
                                                <select id="ddlYear" asp-for="Year" asp-items="Model.YearList" class="form-control">
                                                    <option>Select</option>
                                                </select>
                                            </div>
                                        </div>


                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label>RollNo</label>
                                                <input asp-for="RollNo" class="form-control" placeholder="Roll No">
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label>SchoolarNo</label>
                                                <input asp-for="SchoolarNo" class="form-control" placeholder="Roll No">
                                            </div>
                                        </div>

                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label>SubCode</label>
                                                <input asp-for="SubCode" class="form-control" placeholder="Roll No">
                                            </div>
                                        </div>



                                    </div>
                                </div>
                            </div>

                            <!-- Academic DETAILS -->
                            <div class="card card-primary">
                                <div class="card-header">
                                    <h3 class="card-title"><i class="fas fa-university"></i> Academic Detail</h3>
                                </div>

                                <div class="card-body">
                                    <div class="row">

                                        <div class="col-md-2">
                                            <div class="form-group">
                                                <label>12th school Name</label>
                                                <input type="text" asp-for="SchoolName" class="form-control" placeholder="12th school Name">
                                            </div>
                                        </div>
                                        <div class="col-md-2">
                                            <div class="form-group">
                                                <label>Passsing Year</label>
                                                <select id="ddlAcademicYear" class="form-control">
                                                    <option>Select</option>
                                                    <option>2023</option>
                                                    <option>2024</option>
                                                    <option>2025</option>
                                                    <option>2026</option>
                                                    <option>2027</option>
                                                </select>
                                            </div>
                                        </div>

                                        <div class="col-md-2">
                                            <div class="form-group">
                                                <label>Board</label>
                                                <input type="text" asp-for="Board" class="form-control" placeholder="Board">
                                            </div>
                                        </div>
                                        <div class="col-md-2">
                                            <div class="form-group">
                                                <label>Max. Marks</label>
                                                <input type="text" asp-for="MaxMark" class="form-control" placeholder="Max. Marks">
                                            </div>
                                        </div>
                                        <div class="col-md-2">
                                            <div class="form-group">
                                                <label>Obtain Marks</label>
                                                <input type="text" asp-for="ObtMark" class="form-control" placeholder="Obtain Marks">
                                            </div>
                                        </div>

                                        <div class="col-md-2">
                                            <div class="form-group">
                                                <label>Result</label>
                                                <input type="text" asp-for="Result" class="form-control" placeholder="Result">
                                            </div>
                                        </div>

                                        <div class="col-md-2">
                                            <div class="form-group">
                                                <label>Parcentage</label>
                                                <input type="text" asp-for="Parcent" class="form-control" placeholder="Parcentage">
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                            <!-- PERSONAL DETAILS -->
                            <div class="card card-info mt-3">
                                <div class="card-header">
                                    <h3 class="card-title"><i class="fas fa-user"></i> Student Personal Detail</h3>
                                </div>

                                <div class="card-body">
                                    <div class="row">

                                        <div class="col-md-6">

                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label>First Name</label>
                                                        <input asp-for="StudentName" class="form-control">
                                                        <input type="hidden"  asp-for="Id" />
                                                    </div>
                                                </div>

                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label>Last Name</label>
                                                        <input class="form-control">
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="row mt-2">
                                                <div class="col-md-4">
                                                    <div class="form-group">
                                                        <label>Father Name</label>
                                                        <input asp-for="FatherName" class="form-control">
                                                    </div>
                                                </div>

                                                <div class="col-md-4">
                                                    <div class="form-group">
                                                        <label>FatherMobileNo</label>
                                                        <input asp-for="FatherMobileNo" class="form-control">
                                                    </div>
                                                </div>

                                                <div class="col-md-4">
                                                    <div class="form-group">
                                                        <label>Mother Name</label>
                                                        <input asp-for="MotherName" class="form-control">
                                                    </div>
                                                </div>

                                                <div class="col-md-4">
                                                    <div class="form-group">
                                                        <label>Mobile No</label>
                                                        <input asp-for="MobileNoOne" class="form-control">
                                                    </div>
                                                </div>
                                                <div class="col-md-4">
                                                    <div class="form-group">
                                                        <label>Alter Mobile No</label>
                                                        <input asp-for="MobileNoTwo" class="form-control">
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="row mt-2">
                                                <div class="col-md-4">
                                                    <label>DOB</label>
                                                    <input asp-for="DOB" type="date" class="form-control">
                                                </div>

                                                <div class="col-md-4">
                                                    <label>Gender</label>
                                                    <select asp-for="Gender" class="form-control">
                                                        <option>Select</option>
                                                        <option>Male</option>
                                                        <option>Femle</option>
                                                    </select>
                                                </div>

                                                <div class="col-md-4">
                                                    <label>Minority</label>
                                                    <select asp-for="Minority" class="form-control">
                                                        <option>Select</option>
                                                        <option>Yes</option>
                                                        <option>No</option>
                                                    </select>
                                                </div>

                                                <div class="col-md-4">
                                                    <label>Caste</label>
                                                    <select asp-for="Caste" class="form-control">
                                                        <option>Select</option>
                                                        <option>Gen</option>
                                                        <option>OBC</option>
                                                        <option>SC</option>
                                                        <option>ST</option>
                                                    </select>
                                                </div>
                                            </div>

                                            <div class="row mt-2">
                                                <div class="col-md-4">
                                                    <label>Aadhaar No</label>
                                                    <input asp-for="AadhaarNo" class="form-control">
                                                </div>

                                                <div class="col-md-4">
                                                    <label>SamagraID</label>
                                                    <input asp-for="SamagraID" class="form-control">
                                                </div>

                                                <div class="col-md-8">
                                                    <label>Address</label>
                                                    <textarea asp-for="Address" class="form-control"></textarea>
                                                </div>
                                            </div>

                                        </div>

                                        <!-- Photo -->
                                        <div class="col-md-3 offset-md-1">
                                            <label>Student Photo</label>
                                            <div class="border p-2 text-center" style="height: 200px;">
                                                <i class="fas fa-camera fa-3x text-muted"></i>
                                                <p class="text-muted">Upload Photo</p>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>

                            <div class="text-center mt-4 mb-5">

                                <button class="btn btn-primary px-4" type="submit">
                                    <i class="fas fa-save"></i> Save
                                </button>

                                <button class="btn btn-danger px-4">
                                    <i class="fas fa-times"></i> Exit
                                </button>

                            </div>

                        </form>



                    </div>

                </div>
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>




