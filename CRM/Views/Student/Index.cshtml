    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Student List</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <table id="tblStudentList" class="table table-bordered table-striped dataTable dtr-inline">
                        <thead>
                            <tr role="row">
                                <th class="sorting sorting_asc" style="width: 10px">#</th>
                                <th class="sorting">Student</th>
                                <th class="sorting">Father</th>
                                <th class="sorting">Mobile</th>
                            </tr>

                        </thead>

                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>



@section Scripts {

    <script type="text/javascript">
        // INSERT

        var BASE_URL = "@baseUrl";


        window.onload = function () {

        };



       


        function SearchStudent() {

            $("#tblStudentList tbody").empty();

            var name = $("#txtSearch").val();
            var varSession = $('#ddlSearchSession option:selected').text();
            var varClass = $('#ddlSearchClass option:selected').text();
            var varCourse = $('#ddlSearchCourse option:selected').text();
            var varYear = $('#ddlSearchYear option:selected').text();
            var varStudent = $('#txtSearchStudent option:selected').text();

            $.post(BASE_URL + "/Student/SearchListForRegistration", {
                session: varSession,
                classes: varClass,
                course: varCourse,
                year: varYear,
                name: varStudent
            },
                function (res) {

                    TableData(res)  //--------pass records for generate tabble
                }
            );
        }

        function TableData(tableData)
        {
            $("#tblStudentList tbody").empty();

            $.each(tableData.data, function (index, element) {
                index = index + 1;
                $("#tblStudentList").append("<tr><td>" + index + "</td><td><a href='/Student/index?id=" + element.id + "'> " + element.studentName + "</a></td><td><a href='/Student/index?id=" + element.id + "'>" + element.fatherName + "</a></td><td><a href='/Student/index?id=" + element.id +"'>" + element.mobileNoOne +
                    "</a></td></tr>");

            });



        }


      


    </script>
}